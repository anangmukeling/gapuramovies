<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alvin.favouritelistapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.anang.gapuramovie.READ_DATABASE" />
    <uses-permission android:name="com.anang.gapuramovie.WRITE_DATABASE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_favourite_movie_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_favourite_movie_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.alvin.favouritelistapp.MainActivity"
            android:theme="@style/NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.alvin.favouritelistapp.DetailActivity"
            android:theme="@style/NoActionBar" >
        </activity>

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>